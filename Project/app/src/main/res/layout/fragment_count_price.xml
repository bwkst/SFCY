<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.function.FunctionFragment"
    android:background="#BAB4E7"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingTop="20dp">
        <!-- 字 -->

        <TextView
            android:id="@+id/payment"
            android:height="70dp"
            android:fontFamily="@font/pinyinti"
            android:text="结算"
            android:textAlignment="center"
            android:textColor="#161648"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">
        <!-- 字 -->

        <TextView
            android:id="@+id/weight"
            android:height="70dp"
            android:fontFamily="@font/pinyinti"
            android:text="重量："
            android:textColor="#161648"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/time"
            android:height="70dp"
            android:fontFamily="@font/pinyinti"
            android:text="时间："
            android:textColor="#161648"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/price"
            android:height="70dp"
            android:fontFamily="@font/pinyinti"
            android:text="价格："
            android:textColor="#161648"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/couponuse"
            android:height="70dp"
            android:fontFamily="@font/pinyinti"
            android:text="优惠券使用："
            android:textColor="#161648"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/finalprice"
            android:height="70dp"
            android:fontFamily="@font/pinyinti"
            android:text="付款金额："
            android:textColor="#161648"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/customerservicebuttonstyle"
            android:text="付款"
            android:textSize="32sp"
            android:textColor="#E0E0F0"
            android:textAlignment="center"
            android:fontFamily="@font/pinyinti"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/customerservicebuttonstyle"
            android:text="问题反馈"
            android:textSize="32sp"
            android:textColor="#E0E0F0"
            android:textAlignment="center"
            android:fontFamily="@font/pinyinti"
            />

    </LinearLayout>
</LinearLayout>

