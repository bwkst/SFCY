<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.function.FunctionFragment"
    android:background="#BAB4E7"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/paytitle"
            android:height="70dp"
            android:fontFamily="@font/pinyinti"
            android:text="付款"
            android:textAlignment="center"
            android:textColor="#161648"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout><!-- 标题 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/paymethod"
                android:height="70dp"
                android:fontFamily="@font/pinyinti"
                android:text="付款方式："
                android:textColor="#161648"
                android:textSize="30sp"
                android:layout_width="200dp"
                android:layout_height="60dp" />

            <TextView
                android:id="@+id/method"
                android:height="70dp"
                android:fontFamily="@font/pinyinti"
                android:text="111"
                android:textColor="#161648"
                android:textSize="30sp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
    </LinearLayout><!-- 付款方式 -->

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/submitpayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/submitpaymentbuttonstyle"
            android:text="付款"
            android:textSize="32sp"
            android:textColor="#E0E0F0"
            android:textAlignment="center"
            android:fontFamily="@font/pinyinti"
            />

    </LinearLayout><!-- 付款按钮 -->

</LinearLayout>

